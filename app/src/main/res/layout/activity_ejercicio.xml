<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools" >


    <Button
        android:id="@+id/btnIzq"
        android:layout_width="99dp"
        android:layout_height="64dp"
        android:text="IZQ"
        android:background="@drawable/fondo_boton"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnCentro"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="254dp"
        app:layout_constraintHorizontal_bias="0.187" />

    <Button
        android:id="@+id/btnCentro"
        android:layout_width="99dp"
        android:layout_height="67dp"
        android:text="Der"
        android:background="@drawable/fondo_boton"
        android:layout_marginTop="254dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnDer"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.1" />

    <Button
        android:id="@+id/btnDer"
        android:layout_width="115dp"
        android:layout_height="66dp"
        android:text="Centro"
        android:background="@drawable/fondo_boton"
        app:layout_constraintLeft_toRightOf="@+id/btnIzq"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="255dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="369dp"
        android:layout_height="197dp"
        app:srcCompat="@drawable/cinta"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imgIzq"
        android:layout_width="101dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/corona"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="55dp"
        />

    <ImageView
        android:id="@+id/imgCentro"
        android:layout_width="99dp"
        android:layout_height="95dp"
        app:srcCompat="@drawable/corona"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="55dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.795" />

    <ImageView
        android:id="@+id/imgDer"
        android:layout_width="136dp"
        android:layout_height="118dp"
        app:srcCompat="@drawable/corona"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.547" />

</android.support.constraint.ConstraintLayout>