<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hd.guia5_lab.Principal">

    <Button
        android:background="@drawable/fondo_boton"
        android:layout_centerInParent="true"
        android:id="@+id/btnEjemplos"
        android:text="Ejemplos"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="54dp"
        app:layout_constraintVertical_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent" />
    <Button
        android:text="Ejercicios"
        android:background="@drawable/fondo_boton"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnEjemplos"
        android:id="@+id/btnEjercicios"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.501"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnEjemplos"
        android:layout_marginLeft="8dp" />


</android.support.constraint.ConstraintLayout>
